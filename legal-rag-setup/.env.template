# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# AWS Configuration for Backups
S3_BACKUP_BUCKET=legal-documents-backup
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Security
WEAVIATE_API_KEY=legal-system-key

# Optional: Local model configurations
USE_LOCAL_EMBEDDINGS=false
LOCAL_MODEL_PATH=/models/legal-bert

# Document processing
MAX_DOCUMENT_SIZE_MB=50
SUPPORTED_FORMATS=pdf,docx,txt,html

# Legal-specific settings
DEFAULT_PRACTICE_AREA=general
CONFIDENTIALITY_LEVELS=public,standard,confidential,highly_confidential
RETENTION_POLICY_YEARS=7
